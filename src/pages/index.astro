---
import Layout from '@layouts/Layout.astro';
import {
  OHeroBanner,
  ONavbar,
  OCv,
  OPersonalInfo,
  OEducation,
  OSkills,
  OFooter,
} from '@/components/organisms';
---

<Layout title="Personal portfolio">
  <header>
    <ONavbar client:only="vue" />
  </header>
  <main>
    <OHeroBanner client:only="vue" />
    <OCv client:idle>
      <OPersonalInfo slot="personal-info" client:only="vue" />
      <OEducation slot="education" client:only="vue" />
      <OSkills slot="skills" client:only="vue" />
    </OCv>
  </main>
  <OFooter client:idle />
</Layout>

