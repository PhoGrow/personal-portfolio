---
import Layout from '@/layouts/Layout.astro';
import {
  OLandingPage,
  ONavbar,
  OWelcome,
  OIframe,
  OCv,
  OPersonalInfo,
  OProfile,
  OEducation,
  OSkills,
  OFooter,
} from '@/components/organisms';
---

<Layout title="Personal portfolio">
  <OLandingPage client:load>
    <ONavbar slot="navbar" client:only="vue" />
    <OWelcome slot="welcome" client:only="vue" />
    <OIframe slot="work" client:only="vue" />
  </OLandingPage>
  <OCv client:idle>
    <OPersonalInfo slot="personal-info" client:only="vue" />
    <OProfile slot="profile" client:visible />
    <OEducation slot="education" client:only="vue" />
    <OSkills slot="skills" client:only="vue" />
  </OCv>
  <OFooter client:idle />
</Layout>

